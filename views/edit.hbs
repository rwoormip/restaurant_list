<h1 class="mb-1 restaurant-show-title">編輯餐廳 - {{ restaurant.name }}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-8 mx-auto">

      <form action="/restaurants/{{ restaurant._id }}/?_method=PUT" method="POST">
        <div class="row mb-3 g-2">
          <label for="name" class="col-md-2 col-form-label">餐廳名稱：</label>
          <input type="text" placeholder="{{ restaurant.name }}" name="name" value="{{ restaurant.name }}" class="form-control" id="name" required>
        </div>

        <div class="row mb-3 g-2">
          <label for="name_en" class="col-md-2 col-form-label">英文名稱：</label>
          <input type="text" placeholder="{{ restaurant.name_en }}" name="name_en" value="{{ restaurant.name_en}}" class="form-control" id="name_en">
        </div>

        <div class="row mb-3 g-2">
          <label for="category" class="col-md-2 col-form-label">類別：</label>
          <input list="categorys" placeholder="{{ restaurant.category }}" class="form-control" name="category" value="{{ restaurant.category }}" id="category" required>
          <datalist id="categorys">
            <option>美式</option>
            <option>咖啡</option>
            <option>酒吧</option>
            <option>中東料理</option>
            <option>日本料理</option>
            <option>義式餐廳</option>
          </datalist>
        </div>

        <div class="row mb-3 g-2">
          <label for="location" class="col-md-2 col-form-label">地址：</label>
          <input type="text" placeholder="{{ restaurant.location }}" name="location" value="{{ restaurant.location }}" class="form-control" id="location" required>
        </div>

        <div class="row mb-3 g-2">
          <label for="phone" class="col-md-2 col-form-label">電話：</label>
          <input type="tel" placeholder="{{ restaurant.phone }}" name="phone" value="{{ restaurant.phone }}" class="form-control" id="phone">
        </div>

        <div class="row mb-3 g-2">
          <label for="rating" class="col-md-2 col-form-label">評分：</label>
          <input type="number" placeholder="{{ restaurant.rating }}" name="rating" min="0" max="5" step="0.1" value="{{ restaurant.rating }}" class="form-control" id="rating">
        </div>

        <div class="row mb-3 g-2">
          <label for="description" class="col-md-2 col-form-label">資訊：</label>
          <textarea type="text" placeholder="{{ restaurant.description }}" name="description" class="form-control" id="description" rows="3">{{ restaurant.description }}</textarea>
        </div>

        <div class="row mb-3 g-2">
          <label for="image" class="col-md-2 col-form-label">照片：</label>
          <input type="url" placeholder="{{ restaurant.image }}" name="image" value="{{ restaurant.image }}" class="form-control" id="image">
        </div>

        <div class="row mb-3 g-2">
          <label for="google_map" class="col-md-2 col-form-label">Google Map：</label>
          <input type="url" placeholder="{{ restaurant.google_map }}" name="google_map" value="{{ restaurant.google_map }}" class="form-control" id="google_map">
        </div>

        <div class="text-center mb-3">
          <button type="submit" class="btn btn-major">確認修改</button>
          <a href="/">
            <button type="button" class="btn btn-outline-danger">返回首頁</button>
          </a>
          <button type="reset" class="btn btn-major">還原輸入</button>
        </div>
      </form>
    </div>
  </div>
</div>